body {
    margin: 0;
}

.timestamp {
    color: lightgray;
    font-size: smaller;
    text-align: center;
    border-top: dotted 1px lightgray;
    margin-top: 2.5em;
    margin-bottom: -0.5em;
}

#box {
    margin: 0px auto 0px auto;
    width: 100vw;
    display: flex;
    flex-direction: column;
    height: 100%;
}

#menu {
    padding: 10px;
    margin: 0 5px 5px 5px;
    text-align: center;
}

#output-container {
    overflow: auto;
    flex-grow: 1;
}

#output {
    padding: 10px;
    width: min(600px, 90vw);
    margin: 0 auto 0 auto;
}

.inputzone {
    padding: 10px;
    text-align: center;
}

button,
input[type=text] {
    margin-left: 5px;
    margin-right: 5px;
    display: inline-block;
    border: solid 1px gray;
    border-radius: 3px;
    padding: 2px 8px 3px 8px;
}

input[type=text] {
    margin-right: -5px;
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
    border-right: none;
}

.textbutton {
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
}

label {
    margin: 0;
    padding: 0;
}

#modal-bg {
    background-color: rgba(0, 0, 0, 0.5);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;
    display: flex;
    justify-content: center;
    align-items: center;
}

#modal {
    z-index: 1001;
    background-color: white;
    width: 250px;
    margin: auto;
    border-radius: 12px;
    padding: 2em;
}

#modal h2 {
    margin-top: 0;
}