body {
    margin: 0;
}

.timestamp {
    color: lightgray;
    font-size: smaller;
    text-align: center;
    border-top: dotted 1px lightgray;
    margin-top: 2.5em;
    margin-bottom: -0.5em;
}

#box {
    margin: 0px auto 0px auto;
    width: min(600px, 90vw);
    display: flex;
    flex-direction: column;
    height: 100%;
}

#menu {
    border: solid 2px green;
    padding: 10px;
    margin: 0 5px 5px 5px;
}

#output {
    padding: 10px;
    overflow: auto;
    flex-grow: 1;
}

#input {
    border-top: dashed 1.3px lightgray;
    padding: 10px;
    text-align: center;
}

#input button {
    margin-left: 5px;
    margin-right: 5px;
}