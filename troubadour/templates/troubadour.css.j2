body {
    margin: 0;
}

.timestamp {
    color: lightgray;
    font-size: smaller;
    text-align: center;
    border-top: dotted 1px lightgray;
    margin-top: 2.5em;
    margin-bottom: -0.5em;
}

#box {
    margin: 0px auto 0px auto;
    width: min(600px, 90vw);
    display: flex;
    flex-direction: column;
    height: 100%;
}

#menu {
    padding: 10px;
    margin: 0 5px 5px 5px;
    text-align: center;
}

#output {
    padding: 10px;
    overflow: auto;
    flex-grow: 1;
}

.inputzone {
    padding: 10px;
    text-align: center;
}

.inputzone button,
#menu button,
.inputzone input[type=text] {
    margin-left: 5px;
    margin-right: 5px;
    display: inline-block;
    border: solid 1px gray;
    border-radius: 3px;
    padding: 2px 8px 3px 8px;
}

.inputzone input[type=text] {
    margin-right: -5px;
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
    border-right: none;
}

.inputzone .textbutton {
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
}